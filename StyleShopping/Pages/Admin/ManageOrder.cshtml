@page
@model StyleShopping.Pages.Admin.ManageOrderModel
<section class="cart-section">
    <div class="auto-container">
        <!--Cart Outer-->
        <div class="cart-outer">
            <div class="table-outer">
                <table class="cart-table">
                    <thead class="cart-header">
                        <tr>
                            <th>Total Design Price</th>
                            <th>Total Cart Price</th>
                            <th>Order Date</th>
                            <th>Username</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th class="price">Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.listO != null)
                        {
                            @foreach (var item in Model.listO)
                            {
                                <tr>

                                    <td>@item.totalStylePrice $</td>
                                    <td>@item.totalCartPrice $</td>
                                    <td>@item.orderDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.username</td>
                                    <td>@item.address</td>
                                    <td>@item.phone</td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @await Html.PartialAsync("_OrderStatus", new Tuple<int>(item.status))
                                            </a>
                                            @await Html.PartialAsync("_ChangeOrderStatus", new Tuple<int, int, string>(item.id, item.status, "ManageOrder"))
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-page="./OrderDetail" asp-route-id="@item.id"><span class="fa fa-eye"></span></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>

    </div>
</section>
