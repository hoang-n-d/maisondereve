@page
@model StyleShopping.Pages.Admin.EditCategoryModel
<div class="column col-lg-12 col-md-12 col-sm-12 mt-5">
    <h2>Edit Category</h2>

    <!-- Register Form -->
    <div class="login-form register-form">
        <!--Login Form-->
        <form method="post">
            <input type="hidden" asp-for="category.Id" required>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" asp-for="category.Name" required></input>
                <span asp-validation-for="category.Name" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <button class="theme-btn btn-style-one" type="submit" name="submit-form">Update</button>
            </div>

            <div class="form-group text-right">
                <a class="theme-btn btn-style-one" name="submit-form" href="ManageCategory">Back To List</a>
            </div>

        </form>
    </div>
</div>
