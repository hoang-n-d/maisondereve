                                        </li>
                                        <li class="dropdown">
                                            <a href="./ShowCart">Cart</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="./MyOrder">My Order</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="./Profile">Profile</a>
                                        </li>
                                    }
                                    else if (role == 1)
                                    {
                                        <li class="dropdown">
                                            <a href="/Admin/ManageDashboard">Dashboard</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageCategory">Category</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageInterior">Interior</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageProject">Project</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageBlog">Blog</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageOrder">Order</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/ManageAccount">Account</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Admin/Dashboard">Dashboard</a>
                                        </li>
                                    }
                                    else if (role == 2)
                                    {
                                        <li class="dropdown">
                                            <a href="/Staff/InteriorManage">Interior</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Staff/ProjectManage">Project</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="/Staff/BlogManage">Blog</a>
                                        </li>
                                    }

                                    @if (user != null)
                                    {
                                        <li class="dropdown">
                                            <a href="Logout">Logout</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="dropdown">
                                            <a href="Login">Login</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </nav><!-- Main Menu End-->
                        <!-- Outer Box-->

                    </div>
                </div>
            </div>
        </div>
    </header>

    @if (role != 1 && role != 2)
    {
        <section class="page-title" style="background-image:url(@(ViewData["HeroImage"] ?? "images/main-slider/image-3.jpg"));">
            <div class="auto-container">
                <div class="inner-container clearfix">
                    <div class="title-box">
                        <h1>House Design</h1>
                        <span class="title">The Interior speak for themselves</span>
                    </div>
                </div>
            </div>
        </section>
    }

    <div class="container">
        <main role="main" class="@(role !=1 && role !=2 ? "pb-3" : "admin-content")">
